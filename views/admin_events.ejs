<!-- include header -->
<%- include('include/_header') %>
    <!-- /include header -->

    <div class="mainEventButton ">
        <a class="btn btn-success text-center" id="eventAddButton" href="/event-add"> ADD-EVENT </a>
    </div>

    <div class="eventList w-100">
            
        <% for(var i = 0; i < events.length; i++) { %>
            <div class="col d-inline-flex">

            <div class="card mt-3 border border-primary" id="eventCard">
                <div class="eventCardIcons">
                    <a href="/update-event?id=<%= events[i]._id%>">
                        <svg class="eventEditIcon" xmlns="http://www.w3.org/2000/svg" width="20" height="26" fill="currentColor"
                            class="bi bi-pencil-square" id="editIconUniqAct" viewBox="0 0 16 16">
                            <path
                            d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd"
                            d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                    </a>
                    <a class="removeEvents" data-id=<%= events[i]._id%>> 
                        <svg class="eventDeleteIcon" xmlns="http://www.w3.org/2000/svg" width="20" height="26" fill="currentColor"
                            class="bi bi-trash" id="deleteIconUniqAct" viewBox="0 0 16 16">
                            <path
                            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                            <path fill-rule="evenodd"
                            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                        </svg>
                    </a>  
                </div>
                <p class="card-title"><%= events[i].eventTitle %></p>
                <p class="eventNo"><%= i + 1 %></p>

                <div class="eventTimeDate">
                    <div>
                        <p class="eventStart">START</p>
                        <p class="eventDate"><%= events[i]. eventStartMonth %> <%= events[i]. eventStartDate %>, <%= events[i]. eventStartYear %></p>
                        <p class="eventTime"><%= events[i]. eventStartHour %> : <%= events[i]. eventStartMinute %> <%= events[i]. eventStartAM_PM  %></p>
                    </div>

                    <div>
                        <p class="eventEnd">END</p>
                        <p class="eventDate text-center"><%= events[i]. eventEndMonth %> <%= events[i]. eventEndDate %>, <%= events[i]. eventEndYear %></p>
                        <p class="eventTime"><%= events[i]. eventEndHour %> : <%= events[i]. eventEndMinute %> <%= events[i]. eventEndAM_PM  %></p>
                    </div>
                </div>
                
            </div>

            <% if (i == 4 ) { %>
             </div> 
            <% } %>
        <% } %>

    </div>

    <!-- include footer -->
    <%- include('include/_footer') %>
        <!-- /include footer -->