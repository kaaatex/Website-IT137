                                <option value="2023" <%=users.vehicleExpiryYear=='2023' ? 'selected' : '' %>>2023
                                </option>
                                <option value="2024" <%=users.vehicleExpiryYear=='2024' ? 'selected' : '' %>>2024
                                </option>
                                <option value="2024" <%=users.vehicleExpiryYear=='2025' ? 'selected' : '' %>>2025
                                </option>
                            </select>
